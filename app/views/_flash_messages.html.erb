<% if flash[:success] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:success] %>
  </div>
<% end %>
<% if flash[:error] %>
  <% if flash[:error].is_a?(Array) %>
    <% flash[:error].each do |error|%>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-danger" role="alert">
      <%=  flash[:error]%>
    </div>
  <% end %>
<% end %>
