<div class="statistics">
  <h3>Most Popular Items: </h3>
  <%= flash[:success] %>
  <ul>
  <% @items.popular_items(:top, 5).each do |item| %>
    <li class="most_popular"><%= link_to item.name, item_path(item) %></li>
  <% end %>
  </ul>
  <h3>Least Popular Items: </h3>
  <ul>
  <% @items.popular_items(:bottom, 5).each do |item| %>
    <li class="least_popular"><%= link_to item.name, item_path(item) %></li>
  <% end %>
  </ul>
</div>

<% @items.each do |i| %>
  <% if i.enabled %>
    <div class='item' id="item-<%= i.id %>">
      <%= link_to i.name, item_path(i) %>
      <%= link_to i.thumbnail, item_path(i), id: "item-image-#{i.id}" %>
      <%= i.user.name %>
      <p>$<%= i.price %></p>
      <p>Inventory: <%= i.inventory %></p>
    </div>
  <% end %>
<% end %>
